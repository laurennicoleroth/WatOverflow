<!-- TODO: Display all jokes (Eventually split into highest votes/most recent/trending partials) -->
<div class="container">
  <div class="edit">
    <% if current_user %>
      <%= link_to "Post A Question", new_question_path %>
    <% end %>
  </div>

<table class="table table-hover">
    <thead>
      <tr>
        <th>Votes</th>
        <th>Comments</th>
        <th>Question</th>
        <th>Posted</th>
        <th>Username</th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "question", collection: @questions %>
    </tbody>
  </table>
</div>
</div>
